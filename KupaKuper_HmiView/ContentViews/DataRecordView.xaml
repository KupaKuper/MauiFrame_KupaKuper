<?xml version="1.0" encoding="utf-8" ?><!--产品mes数据界面-->
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KupaKuper_HmiView.ContentViews.DataRecordView"
             xmlns:local="clr-namespace:KupaKuper_HmiView.ContentViewModes"
             x:DataType="local:DataRecordViewVM"
             xmlns:MyControl="clr-namespace:KupaKuper_MauiControl.Controls;assembly=KupaKuper_MauiControl"
             xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui">
    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/MyStyles.xaml;assembly=KupaKuper_MauiControl" />
                <ResourceDictionary Source="/Resources/MyStyles.xaml;assembly=KupaKuper_HmiView" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentView.Resources>
    <Grid RowDefinitions="*" ColumnDefinitions="*">
        <MyControl:CsvTable Grid.Row="0" DataSource="{Binding DataSource}" 
                            IsSearchVisible="True" 
                            FilePaths="{Binding CsvName}" 
                            SelectedFilePath="{Binding NowCsvAdr}"
                            FileSelected="CsvTable_FileSelected" 
                            IsEditable="False"/>
    </Grid>
</ContentView>
