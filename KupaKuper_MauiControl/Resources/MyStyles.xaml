<?xml version="1.0" encoding="utf-8" ?>
<!-- 自定义样式资源字典：定义应用程序通用样式 -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:KupaKuper_MauiControl.Converters"
             xmlns:mycontrol="clr-namespace:KupaKuper_MauiControl.Controls"
             x:Class="KupaKuper_MauiControl.Resources.MyStyles">

    <!--颜色-->
    <!--白色背景-->
    <Color x:Key="LightBackColor">#eeeeee</Color>
    <!--黑色背景-->
    <Color x:Key="DarkBackColor">#393e46</Color>
    <!--白色背景下的文字颜色-->
    <Color x:Key="LightTextColor">Black</Color>
    <!--黑色背景下的文字颜色-->
    <Color x:Key="DarkTextColor">White</Color>
    <!--白背景下的按钮颜色-->
    <Color x:Key="LightButtonColor">#EAEAEA</Color>
    <!--黑色背景下的按钮颜色-->
    <Color x:Key="DarkButtonColor">#404040</Color>
    <!--白色背景下的渐变上部分颜色-->
    <Color x:Key="LightLineUpColor">#F8F8F8</Color>
    <!--黑色背景下的渐变上部分颜色-->
    <Color x:Key="DarkLineUpColor">#333333</Color>
    <!--白色背景下的渐变下部分颜色-->
    <Color x:Key="LightLineDownColor">#E5E5E5</Color>
    <!--黑色背景下的渐变下部分颜色-->
    <Color x:Key="DarkLineDownColor">#414141</Color>
    <!--蓝色-->
    <Color x:Key="blueColor">#00adb5</Color>
    <!--橙色-->
    <Color x:Key="orangeColor">Orange</Color>
    
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--转换器-->
    <converters:ViewIndexToColorConverter x:Key="ViewIndexToColorConverter"/>
    <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    <converters:IndicatorAnimationBehavior x:Key="IndicatorAnimationBehavior"/>
    <!-- 按钮渐变色 -->
    <Shadow x:Key="ButtonShadowStyle" Brush="Black" Offset="1,1" Opacity="0.1" />
    <RoundRectangle x:Key="StrokeShapeStyle10" CornerRadius="10,10,10,10" />
    <RoundRectangle x:Key="StrokeShapeStyle15" CornerRadius="15,15,15,15" />
    <Shadow x:Key="ShadowStyle" Brush="Black" Offset="1,1" Opacity="0.1" />
    <LinearGradientBrush x:Key="StrokeStyle" EndPoint="0,1">
        <GradientStop Color="Gray" Offset="0.1" />
        <GradientStop Color="Black" Offset="1" />
    </LinearGradientBrush>
    <!-- 渐变背景 -->
    <LinearGradientBrush x:Key="BackgroundStyle" EndPoint="0,1">
        <GradientStop Color="{AppThemeBinding Light={StaticResource LightLineUpColor}, Dark={StaticResource DarkLineUpColor}}" Offset="0.95" />
        <GradientStop Color="{AppThemeBinding Light={StaticResource LightLineDownColor}, Dark={StaticResource DarkLineDownColor}}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- 外框样式 -->
    <Style x:Key="BorderStyle" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0.5" />
        <Setter Property="StrokeShape" Value="{StaticResource StrokeShapeStyle10}" />
        <Setter Property="Stroke" Value="{StaticResource StrokeStyle}" />
    </Style>
    <!-- 按钮样式 -->
    <Style x:Key="HmiButtonStyle" TargetType="mycontrol:HmiButton">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightButtonColor}, Dark={StaticResource DarkButtonColor}}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="VerticalOptions" Value="Fill" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="FontSize" Value="{OnIdiom 14, Phone=10, Tablet=12, Desktop=14}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />
    </Style>
    <!-- 轴名称按钮样式 -->
    <Style x:Key="AxisNameButtonStyle" TargetType="mycontrol:HmiButton">
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="VerticalOptions" Value="Fill" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="FontSize" Value="{OnIdiom 14, Phone=10, Tablet=12, Desktop=14}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />
    </Style>
    <!-- 标签样式 -->
    <Style x:Key="LableStyle" TargetType="Label">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />
    </Style>
    <!-- 指示灯样式 -->
    <Style x:Key="BoxViewStyle" TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="Gray" />
        <Setter Property="WidthRequest" Value="12" />
        <Setter Property="HeightRequest" Value="12" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>
    <!-- 指示灯外框 -->
    <Style x:Key="BoxViewBorderStyle" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource Gray300}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="HeightRequest" Value="18" />
        <Setter Property="WidthRequest" Value="18" />
        <Setter Property="StrokeShape" Value="{StaticResource StrokeShapeStyle15}" />
    </Style>
    <!-- 主界面顶栏按钮样式 -->
    <Style x:Key="HomeButtonStyle" TargetType="Button">
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="BackgroundColor" Value="Black" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="VerticalOptions" Value="Fill" />
        <Setter Property="CornerRadius" Value="13" />
        <Setter Property="Padding" Value="{OnIdiom 10, Phone=2}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />
        <Setter Property="Shadow" Value="{StaticResource ButtonShadowStyle}" />
    </Style>
    <!-- 二层页面选择框 -->
    <Style x:Key="ViewButtonStyle" TargetType="Label">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="WidthRequest" Value="{OnIdiom 80, Phone=60}" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Fill" />
        <Setter Property="FontSize" Value="{OnIdiom 17, Phone=15}" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />
    </Style>
    <!-- 二层外框样式 -->
    <Style x:Key="ViewBorderStyle" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape" Value="{StaticResource StrokeShapeStyle15}" />
        <Setter Property="Shadow" Value="{StaticResource ShadowStyle}" />
    </Style>

    <!-- 颜色定义 -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#3700B3</Color>
    <Color x:Key="PrimaryLight">#7C4DFF</Color>
    <Color x:Key="Secondary">#03DAC6</Color>
    <Color x:Key="SecondaryDark">#018786</Color>
    <Color x:Key="Background">#FFFFFF</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="Error">#B00020</Color>
    
    <!-- 灰度色阶 -->
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray700">#616161</Color>
    <Color x:Key="Gray800">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>

    <!-- 通用按钮样式 -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- 分组按钮样式：用于参数分组选择 -->
    <Style x:Key="GroupButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Gray800}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <!-- 视觉状态管理器：定义按钮不同状态的外观 -->
        <Style.Triggers>
            <Trigger TargetType="Button" Property="IsPressed" Value="True">
                <Setter Property="BackgroundColor" Value="{StaticResource Gray200}"/>
            </Trigger>
            <Trigger TargetType="Button" Property="IsEnabled" Value="False">
                <Setter Property="TextColor" Value="{StaticResource Gray400}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 标签样式 -->
    <Style x:Key="BaseLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource Gray900}"/>
        <Setter Property="LineBreakMode" Value="TailTruncation"/>
    </Style>

    <!-- 输入框样式 -->
    <Style x:Key="BaseEntryStyle" TargetType="Entry">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource Gray900}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

    <!-- 边框样式 -->
    <Style x:Key="BaseBorderStyle" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource Gray300}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 4"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}"/>
        <Setter Property="Padding" Value="1"/>
    </Style>

    <!-- 网格样式 -->
    <Style x:Key="BaseGridStyle" TargetType="Grid">
        <Setter Property="RowSpacing" Value="8"/>
        <Setter Property="ColumnSpacing" Value="8"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- 开关样式 -->
    <Style x:Key="BaseSwitchStyle" TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource Primary}"/>
        <Setter Property="ThumbColor" Value="White"/>
    </Style>

    <!-- 搜索栏样式 -->
    <Style x:Key="BaseSearchBarStyle" TargetType="SearchBar">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource Gray900}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
    </Style>

    <!-- 集合视图样式 -->
    <Style x:Key="BaseCollectionViewStyle" TargetType="CollectionView">
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="ItemsLayout">
            <Setter.Value>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- 定义视图选择按钮样式 -->
    <Style x:Key="DataViewButtonStyle" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="1" />
        <Setter Property="Margin" Value="1" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <!-- 定义标签样式 -->
    <Style x:Key="DataLabelStyle" TargetType="Label">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="WidthRequest" Value="{OnIdiom 80, Phone=60}" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="FontSize" Value="{OnIdiom 15, Phone=13}" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextColor}, Dark={StaticResource DarkTextColor}}" />
    </Style>
</ResourceDictionary>