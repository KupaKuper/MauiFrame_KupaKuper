<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KupaKuper_MauiControl.ControlModes"
             xmlns:switchableLable="clr-namespace:KupaKuper_MauiControl.Controls"
             x:DataType="local:SwitchableContentViewMode"
             x:Class="KupaKuper_MauiControl.Controls.SwitchableContentView">
    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/MyStyles.xaml;assembly=KupaKuper_MauiControl" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentView.Resources>
    <Grid RowDefinitions="auto,*">
        <switchableLable:SwitchableLable x:Name="lables" FontSize="14" LableChanged="SwitchableLable_LableChanged"/>
        <ContentView Grid.Row="1" Content="{Binding CurrentView}" />
    </Grid>
</ContentView>