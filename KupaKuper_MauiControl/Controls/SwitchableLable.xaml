<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KupaKuper_MauiControl.ControlModes"
             x:DataType="local:SwitchableLableViewMode"
             x:Class="KupaKuper_MauiControl.Controls.SwitchableLable">
    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/MyStyles.xaml;assembly=KupaKuper_MauiControl" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentView.Resources>
    <GraphicsView x:Name="ViewsLable" HeightRequest="{Binding LableHeight}">
        <GraphicsView.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnLabelTapped" />
        </GraphicsView.GestureRecognizers>
    </GraphicsView>
</ContentView>