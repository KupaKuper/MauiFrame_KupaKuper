<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KupaKuper_MauiControl.ControlModes"
             xmlns:this="clr-namespace:KupaKuper_MauiControl.Controls"
             x:DataType="local:BasicBarsViewMode"
             x:Class="KupaKuper_MauiControl.Controls.BasicBars">
    <ContentView.Resources>
        <Style TargetType="GraphicsView">
            <Style.Triggers>
                <DataTrigger TargetType="GraphicsView"
                            Binding="{Binding Source={x:Reference ChartView}, Path=BackgroundColor}"
                            Value="{x:Static Colors.White}">
                    <Setter Property="this:BasicBars.TextColor"  Value="{x:Static Colors.Black}"/>
                </DataTrigger>
                <DataTrigger TargetType="GraphicsView"
                            Binding="{Binding Source={x:Reference ChartView}, Path=BackgroundColor}"
                            Value="{x:Static Colors.Black}">
                    <Setter Property="this:BasicBars.TextColor" Value="{x:Static Colors.White}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </ContentView.Resources>
    
    <GraphicsView x:Name="ChartView"
                  BackgroundColor="{AppThemeBinding Light=White, Dark=Black}">
        <GraphicsView.GestureRecognizers>
            <PanGestureRecognizer PanUpdated="OnPanUpdated"/>
        </GraphicsView.GestureRecognizers>
    </GraphicsView>
</ContentView>
